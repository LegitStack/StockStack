<h2>Login</h2>
<br />
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="form-group">
    <div class="col-xs-7">
  		<%= f.email_field :email, autofocus: true, :class => "input-lg form-control", "placeholder" => "email@domain.com" %>
    </div>

    <div class="col-xs-7">
      <%= f.password_field :password, autocomplete: "off", :class => "input-lg form-control", "placeholder" => "password" %>
    </div>

    <div class="col-xs-7">
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
    </div>

    <div class="col-xs-7">
      <div><%= f.submit "Login", :class=> "btn btn-default btn-lg pull-right" %></div>
    </div>
  </div>
<% end %>
<center><h4>Don't have a Login?</h4>
<%= render "devise/shared/links" %></center>

