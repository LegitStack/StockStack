<h2>Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<br />
  <div class="form-group">
    <div class="col-xs-7">
      <%= f.email_field :email, autofocus: true, :class => "input-lg form-control", "placeholder" => "email@domain.com"  %>
    </div>

    <div class="col-xs-7">
      <br />
      <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    </div>

    <div class="col-xs-7">
      <%= f.password_field :password, autocomplete: "off", :class => "input-lg form-control", "placeholder" => "password"  %>
    </div>

    <div class="col-xs-7">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input-lg form-control", "placeholder" => "password" %>
    </div>

    <div class="col-xs-7">
      <div><%= f.submit "Sign up", :class=> "btn btn-default btn-lg pull-right"  %></div>
    </div>


  </div>

<% end %>
<br />
<br />
<center>
<h4>Already have an account?</h4>
<%= render "devise/shared/links" %></center>
