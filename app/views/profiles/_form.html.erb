<div class="row">
  <%= form_for(@profile) do |f| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
    
      <div class="col-xs-4 col-sm-4">
        <br>
        <%= f.text_field :name, :class => "input-lg form-control", "placeholder" => "name" %>
      </div>

      <div class="col-xs-4 col-sm-4">
        <br>
        <%= f.text_field :phone, :class => "input-lg form-control", "placeholder" => "phone number" %>
      </div>

      <div class="col-xs-4 col-sm-4">
        <br>
        <%= f.text_field :email, :class => "input-lg form-control", "placeholder" => "email", "required" => "true" %>
      </div>

      <div class="col-xs-4 col-sm-4">
        <div class="input-group">
          <div class="input-group-addon">Title </div>
          <%= f.select :title, options_for_select(@listoftitles, @profile.title), {:selected => params[:title]}, { :class => "input-lg form-control dropdown-toggle"}  %>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4">
        <%= f.text_field :bio, :class => "input-lg form-control", "placeholder" => "about me" %>
      </div>
      <div class="col-xs-4 col-sm-4">
        <div class="input-group">
          <div class="input-group-addon">Availability </div>
          <%= f.select :status, options_for_select([["Free", "free"], ["Busy", "busy"]], @profile.status), {:selected => params[:status]}, { :class => "input-lg form-control dropdown-toggle"} %>
        </div>
      </div>

      <div class="col-xs-4 col-sm-4">
        <div class="input-group">
          <div class="input-group-addon">Assignment<br />Change </div>
          <%= f.select :assignmail, options_for_select([["don't email me", false], ['email me', true]], @profile.assignmail),{:selected => params[:assignmail]}, {:class => "input-lg form-control"} %>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4">
        <div class="input-group">
          <div class="input-group-addon">Progress<br />Made</div>
          <%= f.select :progressmail, options_for_select([["don't email me", false], ['email me', true]], @profile.progressmail),{:selected => params[:progressmail]}, {:class => "input-lg form-control"} %>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4">
        <div class="input-group">
          <div class="input-group-addon">Phase<br />Completion</div>
          <%= f.select :phasemail, options_for_select([["don't email me", false], ['email me', true]], @profile.phasemail),{:selected => params[:phasemail]}, {:class => "input-lg form-control"} %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-12">
        <div class="actions pull-right">
          <br />
            <%= f.submit "Submit", :class=> "btn btn-info btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>      
</div>

