This is an automated message to let you know your loan is making progress! 


	<% if @changetype == "Progress" %>
    <% oldname = @change %>
    <% newname = @record.progress %>
  <% else %>
    <% oldname = @change %>
    <% if oldname == "'Done'" %>
      <% newname = "'Not Done'" %>
    <% else %>
      <% newname = "'Done'" %>
    <% end %>
  <% end %>

  <%= getname @efrom, true %> changed <%= @changetype %> from <%= oldname %> to <%= newname %>
  
  <% temptime = Time.now-6.hours %>
  <%= temptime.strftime("on %m/%d/%Y") %>
  <%= temptime.strftime("at %l:%M%p")%>
