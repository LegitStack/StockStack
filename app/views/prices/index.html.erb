<h1>Listing prices</h1>
    <h4>Total Prices: <%= @prices.count %></h4>
<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>When</th>
      <th>High</th>
      <th>Low</th>
      <th>Open</th>
      <th>Close</th>
      <th>Other</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.ticker %></td>
        <td><%= price.when %></td>
        <td><%= price.high %></td>
        <td><%= price.low %></td>
        <td><%= price.open %></td>
        <td><%= price.close %></td>
        <td><%= price.other %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price', new_price_path %>



  <h2>Backup</h2>
  <br />
  <div class="row">
    <div class="col-xs-4 col-sm-4">
    <h3>Export Prices</h3>
      <%= link_to "To CSV File", prices_path(format: "csv"), :class => 'btn btn-default btn' %>

    </div>
    <div class="col-xs-4 col-sm-4">
      <h3>Import Prices</h3>
      <%= form_tag import_prices_path, multipart: true do %>
        <%= file_field_tag :file, :class => 'btn btn-default btn' %><br />
        <%= submit_tag "Import", :class => 'btn btn-default btn' %>
      <% end %>
    </div>
  </div>
